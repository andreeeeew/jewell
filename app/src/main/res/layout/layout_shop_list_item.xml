<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/shop_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:civ_border_color="@color/blue_inactive"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Super Round Ring"
                android:textColor="@color/purple_active"
                android:textSize="19sp"
                android:layout_toRightOf="@id/shop_image"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/shop_products_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Mitch Tabian\n585"
                android:layout_below="@+id/product_name"
                android:layout_marginVertical="7dp"
                android:layout_toRightOf="@+id/product_image"
                android:layout_marginLeft="10dp"
                android:textColor="@color/product_type"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/shop_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Mitch Tabian\n585"
                android:layout_below="@+id/product_name"
                android:layout_marginVertical="7dp"
                android:layout_toRightOf="@+id/product_image"
                android:layout_marginLeft="10dp"
                android:textColor="@color/product_type"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last_inventorization_label"
                android:text="$21.40"
                android:textSize="19dp"
                android:textColor="@color/green_active"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/last_inventorization"
                android:text="$21.40"
                android:textSize="19dp"
                android:textColor="@color/green_active"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>