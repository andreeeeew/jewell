<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/store_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                app:civ_border_color="@color/blue_inactive"
                app:civ_border_width="4dp"
                />

            <TextView
                android:id="@+id/store_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="55dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="70dp"
                android:layout_toEndOf="@id/store_image"
                android:text="Super Round Ring"
                android:textColor="@color/purple_active"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/store_products_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Products"
                android:layout_below="@+id/store_name"
                android:layout_marginVertical="3dp"
                android:layout_toEndOf="@+id/store_image"
                android:layout_marginStart="55dp"
                android:textColor="@color/store_products_label"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/store_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="637"
                android:layout_below="@+id/store_name"
                android:layout_marginVertical="3dp"
                android:layout_toEndOf="@+id/store_products_label"
                android:layout_marginStart="12dp"
                android:textColor="@color/store_products_label"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/store_last_inventorization_label"
                android:layout_below="@+id/store_products"
                android:text="Last Inventorization:"
                android:layout_toLeftOf="@+id/store_last_inventorization"
                android:layout_marginEnd="1dp"
                android:layout_centerVertical="true"
                android:layout_marginVertical="11dp"
                android:textColor="@color/store_inentorization_label"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/store_last_inventorization"
                android:text="19.11.2019"
                android:layout_below="@+id/store_products"
                android:layout_marginVertical="11dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:textColor="@color/store_inentorization_label"
                />

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>