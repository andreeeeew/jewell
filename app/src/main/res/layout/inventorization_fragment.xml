<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/inventorizationRelativeLayout"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_inactive">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventorization_fab"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:elevation="4dp"
        app:backgroundTint="@color/invent_fab"
        android:src="@drawable/ic_camera_alt_black_24dp"
    />

    <androidx.recyclerview.widget.RecyclerView
        tools:listitem="@layout/layout_inventorization_list_item"
        android:id="@+id/recyclerViewInventorizations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>